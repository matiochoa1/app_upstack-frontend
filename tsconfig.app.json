{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"baseUrl": "src",
		"paths": {
			"@/components/*": ["components/*"], // ! Esto permite que typescript reconozca los alias de los componentes
			"@/views/*": ["views/*"], // ! Esto permite que typescript reconozca los alias de las vistas
			"@/layouts/*": ["layouts/*"], // ! Esto permite que typescript reconozca los alias de los layouts
			"@/api/*": ["api/*"], // ! Esto permite que typescript reconozca los alias de las apis
			"@/types/*": ["types/*"], // ! Esto permite que typescript reconozca los alias de los types
			"@/lib/*": ["lib/*"], // ! Esto permite que typescript reconozca los alias de las librerias
			"@/utils/*": ["utils/*"], // ! Esto permite que typescript reconozca los alias de las librerias
			"@/locales/*": ["locales/*"], // ! Esto permite que typescript reconozca los alias de los locales
			"@/hooks/*": ["hooks/*"] // ! Esto permite que typescript reconozca los alias de los hooks
		},

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
